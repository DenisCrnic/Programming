#-*-encoding: utf-8-*-
import time
time_list = {"hours" : 0, "minutes" : 0, "seconds" : 0}

while True:
    time_list["seconds"] += 1
    if (time_list["seconds"] == 60):
        time_list["minutes"] += 1
        time_list["seconds"] = 0
        if (time_list["minutes"] == 60):
            time_list["hours"] += 1
            time_list["minutes"] = 0
            time_list["seconds"] = 0
    time.sleep(1)
    if (len(time_list["seconds"] < 10):
            s = 0 + str(time_list["seconds"])
    print s
    print str(time_list["hours"]) + ":" + str(time_list["minutes"]) + ":"\
     + str(time_list["seconds"])