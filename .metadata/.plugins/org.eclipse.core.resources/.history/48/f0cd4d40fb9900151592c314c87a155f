#-*- encoding: utf-8 -*-

import webbrowser
from time import sleep
run = True
while run:
    url = "http://" + raw_input("Input url: http://")
    
    while True:
        try:
            times = input("How many times do you want to open this tab: ")
            sleep_time = input("on _ seconds")
            break
        except:
            "Input number!"
    for i in range(times):
        sleep(3)
        webbrowser.open(url)