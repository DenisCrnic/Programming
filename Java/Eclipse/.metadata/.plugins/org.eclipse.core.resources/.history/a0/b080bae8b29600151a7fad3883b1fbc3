public class Naloga6{
     public static void main(String []args){
    	 int vsota=0;
    	 while(true){
    		 int x = randomRange(-5, 5);
    		 if(x==0)
    			 break;
    		 else{
    			 System.out.print(x+", ");
    			 vsota+=x;
    		 }
    	 }
    	 System.out.println("Vsota: "+vsota);
     }
     
     public static int randomRange(int min, int max){
    	 return (int)(Math.random() * ((max - min) + 1)) + min;
     }
}